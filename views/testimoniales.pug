extends ./layout/index

block contenido 
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        //-p= JSON.stringify(testimoniales)
        blockquote.text-center Experiencias de nuestros clientes
        include ./layout/bloque_testimoniales
        .row
            
                .col-md-12
                    h2.d-block.w-100.text-center Agrega un testimonial
                    if(errores) 
                        each error in errores
                            .alert.col.alert-danger.text-center=error.mensaje
                .row.justify-content-center.col
                    .col-md-8
                        form(action="/testimoniales" method="post")
                            .form-group
                                label(for='nombre') Nombre
                                input#nombre.form-control(type='text', placeholder='Tu nombre', name="nombre", class="form-control", value= nombre)
                            .form-group
                                label(for='correo') Correo electrónico
                                input#correo.form-control(type='email', placeholder='Tu correo electrónico', name="correo", class="form-control", value= correo)
                            .form-group
                                label(for='mensaje') Mensaje
                                textarea#mensaje.form-control(name="mensaje", rows=3, placeholder="Tu mensaje", class="form-control")= mensaje
                            input.btn.btn-success.btn-block(type="submit")